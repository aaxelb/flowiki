{{#component yang
  being environment
  as |children innerEnvironment|
}}
  {{#each
    (if inChaos (shuffled children) children)
    as |child|
  }}
    {{yang-yin
      yin yang
      being=child
      environment=innerEnvironment
      inChaos=(not inChaos)
    }}
  {{/each}}
{{/component}}

